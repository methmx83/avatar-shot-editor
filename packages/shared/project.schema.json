{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-scene-editor.local/project.schema.json",
  "title": "Project",
  "type": "object",
  "required": [
    "schemaVersion",
    "id",
    "name",
    "assets",
    "timeline",
    "workflowDefinitions",
    "workflowRuns"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "path"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["image", "video", "audio", "unknown"]
          },
          "path": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "timeline": {
      "type": "object",
      "required": ["clips"],
      "properties": {
        "clips": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "assetId", "start", "duration"],
            "properties": {
              "id": { "type": "string" },
              "assetId": { "type": "string" },
              "start": { "type": "number" },
              "duration": { "type": "number" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "workflowDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "version", "config"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "version": { "type": "string" },
          "config": { "type": "object" }
        },
        "additionalProperties": false
      }
    },
    "workflowRuns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "workflowId", "status", "createdAt"],
        "properties": {
          "id": { "type": "string" },
          "workflowId": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "running", "success", "failed"]
          },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
